class Solution:
    def longestBalanced(self, s: str) -> int:
        substring_max_len = 0
        n = len(s)
        for i in range(n):
            freq = [0] * 26
            max_freq = 0
            unique_element = 0
            for j in range(i, n):
                idx = ord(s[j]) - ord('a')
                if freq[idx] == 0:
                    unique_element += 1
                freq[idx] += 1
                if freq[idx] > max_freq:
                    max_freq = freq[idx]
                if max_freq * unique_element == (j - i + 1):
                    substring_max_len = max(substring_max_len, j - i + 1)
        return substring_max_len
