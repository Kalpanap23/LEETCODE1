class Solution:
    def isInterleave(self, s1: str, s2: str, s3: str) -> bool:
        if len(s1) + len(s2) != len(s3): # edge case handling
            return False
        @cache
        def dp(i1, i2):
            if i1 == len(s1) and i2 == len(s2): # both ptrs are at the end, full string matching completed, return true
                return True
            out = False # if s3's current index matches neither s1 and s2, return false by default
            if i1 < len(s1) and s1[i1] == s3[i1+i2]: # try to match s3's current index to s1, advance ptr1
                out = out or dp(i1+1,i2)
            if i2 < len(s2) and s2[i2] == s3[i1+i2]: # try to match s3's current index to s2, advance ptr2
                out = out or dp(i1,i2+1)
            return out
        return dp(0,0)
